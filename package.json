{
	"name": "deno",
	"description": "Monorepo for DENO scripts",
	"version": "1.0.0",
	"author": "A. Mat√≠as Quezada <amatiasq@gmail.com>",
	"license": "MIT",
	"scripts": {
		"start": "npm run serve:lulas",
		"build": "bin/bundle.sh",
		"build:lulas": "npm run build -- lulas",
		"serve": "deno run --unstable --allow-read --allow-net --allow-run bin/serve.ts",
		"serve:lulas": "npm run serve -- --canvas lulas/main.ts",
		"test": "cd src; deno test",
		"test-watch": "cd src; fswatch  -o . | xargs -n1 -I{} deno test"
	}
}
